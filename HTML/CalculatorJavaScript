<script>

//Addition Operation
function Add(){
var a=parseInt(document.getElementById("id1").value);
var b=parseINt(document.getElementById("id2").value);
//document.write(a+b);
console.log(a+b);
}

//Subtraction Operation
function Sub(){
var a=document.getElementById("id1").value;
var b=document.getElementById("id2").value;
if(a>b){
    document.write(a-b);
}
else{
    window.alert("please enter the valid option");
}
}

//Multiplication Operation
function Mul(){
var a=document.getElementById("id1").value;
var b=document.getElementById("id2").value;
if(a==0 || b==0){
    window.alert("Please enter the valid inputs");
}
else{
    document.write(a*b);
}
}

//Division OPeration
function Div(){
var a=document.getElementById("id1").value;
var b=document.getElementById("id2").value;
if(b!=0){
    document.write(a/b);
}
else{
    window.alert("Please enter the valid option");
}
}

//Modulus Operation
function Mod(){
var a=document.getElementById("id1").value;
var b=document.getElementById("id2").value;
if(b!=0){
    document.write(a%b);
}
else{
    window.alert("Please enter the valid option");
}
}

</script>
